apiVersion: apps/v1
kind: Deployment
metadata:
  name: antivirus-scanfile-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: antivirus
    antivirus: scanfile
spec:
  replicas: {{ ANTIVIRUS_SCANFILE_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: antivirus
      antivirus: scanfile
  template:
    metadata:
      labels:
        app: antivirus
        antivirus: scanfile
      annotations:
    spec:
      securityContext:  
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: antivirus-scanfile
        image: {{ ANTIVIRUS_SCANFILE_IMAGE_NAME }}:{{ APP_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - name: antivirus-scan
          containerPort: {{ ANTIVIRUS_PORT }}
          protocol: TCP
        envFrom:
        - secretRef:
            name: antivirus-secret
        volumeMounts:
        - name: shared
          mountPath: /shared
          readOnly: false
        resources:
          limits:
            cpu: "1000m"
            memory: "1Gi"
          requests:
            cpu: "100m"
            memory: "1Gi"
      volumes:
      - name: shared
        emptyDir: {}

