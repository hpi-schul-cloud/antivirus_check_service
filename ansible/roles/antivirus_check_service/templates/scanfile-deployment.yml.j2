apiVersion: apps/v1
kind: Deployment
metadata:
  name: antivirus-scanfile-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: antivirus
    antivirus: scanfile
spec:
  replicas: {{ ANTIVIRUS_SCANFILE_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: antivirus
      antivirus: scanfile
  template:
    metadata:
      labels:
        app: antivirus
        antivirus: scanfile
      annotations:
    spec:
      securityContext:  
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: antivirus-scanfile
        image: {{ ANTIVIRUS_IMAGE_NAME }}:{{ APP_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        args: ["scan-file"]
        envFrom:
        - secretRef:
            name: antivirus-secret
        volumeMounts:
        - name: shared
          mountPath: /shared
          readOnly: false
        resources:
          limits:
            cpu: {{ ANTIVIRUS_SCANFILE_CPU_LIMITS|default("1000m", true) }}
            memory: {{ ANTIVIRUS_SCANFILE_MEMORY_LIMITS|default("1Gi", true) }}
          requests:
            cpu: {{ ANTIVIRUS_SCANFILE_CPU_REQUESTS|default("100m", true) }}
            memory: {{ ANTIVIRUS_SCANFILE_MEMORY_REQUESTS|default("128Mi", true) }}
      volumes:
      - name: shared
        emptyDir: {}

